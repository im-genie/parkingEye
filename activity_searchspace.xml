<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_searchspace"
    android:background="#161713"
    tools:context=".SearchSpaceActivity">


    <ImageView
        android:id="@+id/homelogo"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/homelogo" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="309dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="721dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/button" />

    <ImageView
        android:id="@+id/searchemptyspace"
        android:layout_width="152dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/searchemptyspace" />


    <ImageView
        android:id="@+id/searchspace"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/searchspace" />

    <ImageView
        android:id="@+id/floor"
        android:layout_width="264dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/floor" />

    <ImageView
        android:id="@+id/state"
        android:layout_width="393dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/state" />

    <ImageView
        android:id="@+id/emptyfull"
        android:layout_width="320dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/emptyfull" />

</RelativeLayout>